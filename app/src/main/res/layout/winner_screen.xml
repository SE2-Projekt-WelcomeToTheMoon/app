<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/textView_Congratulations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/congrats"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView_TheWinnerIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_winner_is"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="160dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView_1stPlace"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="210dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView_2ndPlace"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text=""
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="280dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView_3rdPlace"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text=""
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="330dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView_4thPlace"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text=""
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="380dp"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginTop="580dp"
                android:text="@string/home" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="215dp"
                android:layout_marginTop="580dp"
                android:text="@string/share" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>